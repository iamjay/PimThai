<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">

    <id>com.kanokgems.PimThai</id>
    <name>PimThai</name>
    <versionNumber>1.0.0</versionNumber>
    <buildId>1</buildId>
    <description>PimThai - The Thai Keyboard for BlackBerry Playbook</description>
    <copyright>Copyright 2012 Pathompong Puengrostham (pathompong@gmail.com)</copyright>

    <author>Pathompong Puengrostham</author>
    <authorId>gYAAgCnLy00luMh6_tgBdNxiqp8</authorId>

    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>

    <configuration id="com.qnx.qcc.toolChain.255862546" name="Default">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7-g/PimThai" entry="true" type="Qnx/Elf">PimThai</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.1626551880" name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7-g/PimThai" entry="true" type="Qnx/Elf">PimThai</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.1753209090" name="Device-Release">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7/PimThai" entry="true" type="Qnx/Elf">PimThai</asset>
    </configuration>
    <configuration id="com.qnx.qcc.toolChain.1065779403" name="Simulator-Debug">
       <platformArchitecture>x86</platformArchitecture>
       <asset path="x86/o-g/PimThai" entry="true" type="Qnx/Elf">PimThai</asset>
    </configuration>
    
    <icon>
        <image>icon.png</image>
    </icon>
    
    <!--  The splash screen that will appear when your application is launching. Should be 1024x600. -->
    <!-- <splashscreen></splashscreen> -->

    <action system="true">run_native</action>

    <autoOrients>false</autoOrients>
    <aspectRatio>landscape</aspectRatio>

    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>
    <env var="QT_QPA_PLATFORM_PLUGIN_PATH" value="app/native/lib/platforms" />
    <env var="QT_QPA_FONTDIR" value="app/native/fonts" />
</qnx>
