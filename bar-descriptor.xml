<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx>
    <id>com.kanokgems.PimThai</id>
    <name>PimThai</name>
    <versionNumber>1.0.0</versionNumber>
    <buildId>2</buildId>
    <description>PimThai - A Thai Keyboard for BlackBerry Playbook</description>
    <copyright>Copyright 2012 Pathompong Puengrostham (pathompong@gmail.com)</copyright>

    <author>Pathompong Puengrostham</author>
    <authorId>gYAAgCnLy00luMh6_tgBdNxiqp8</authorId>

    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <aspectRatio>landscape</aspectRatio>
        <autoOrients>false</autoOrients>
    </initialWindow>

    <env var="LD_LIBRARY_PATH" value="app/native/lib"/>
    <env var="QT_QPA_PLATFORM_PLUGIN_PATH" value="app/native/lib/platforms" />

    <configuration name="Default">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset entry="true" type="Qnx/Elf">PimThai</asset>
    </configuration>

    <icon>
        <image>icon.png</image>
    </icon>

    <splashscreen>splash.png</splashscreen>

    <action system="true">run_native</action>
</qnx>
